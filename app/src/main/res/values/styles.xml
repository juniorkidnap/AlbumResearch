<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="rowAlbumText">
        <item name="android:layout_width">@dimen/app_text_layout_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/app_margin</item>
        <item name="android:layout_marginEnd">@dimen/app_margin</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/app_text_row_size</item>
        <item name="android:gravity">start</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="mText">
        <item name="android:layout_width">@dimen/app_text_layout_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/app_margin</item>
        <item name="android:layout_marginEnd">@dimen/app_margin</item>
        <item name="android:layout_marginTop">@dimen/app_margin_max</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/app_text_regular_size</item>
        <item name="android:gravity">start</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

</resources>